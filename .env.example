# PDF file path to ingest
# PDF_PATH=./data/sample.pdf
# PDF_PATH=./data/Construction_Agreement.pdf
PDF_PATH=./data/Construction_Contract-for-Major-Works.pdf

# Optional: logical collection name to store this PDF's vectors inside the Chroma DB.
# If empty, collection will default to the PDF filename (without extension).
# COLLECTION_NAME=Sample
# COLLECTION_NAME=Construction_Agreement
# COLLECTION_NAME=Construction_Contract
COLLECTION_NAME=Construction_Contract2

# Persist directory for Chroma DB
PERSIST_DIR=./chroma_db

# Hugging Face embeddings model
MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Chunk settings (measured in characters for RecursiveCharacterTextSplitter)
CHUNK_SIZE=1024
CHUNK_OVERLAP=100

# Optional: tokenizer encoding name (default: cl100k_base)
ENCODING_NAME=cl100k_base

# Groq API key for generation
GROQ_API_KEY=<YOUR_GROQ_API_KEY>
GROQ_MODEL_NAME=llama-3.1-8b-instant
